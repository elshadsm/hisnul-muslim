<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dazData"
            type="com.elshadsm.muslim.hisnul.models.DazData" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/daz_view_activity_coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".activities.DazViewActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/ctl_constraint_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/extended_top_app_bar_height">

                    <TextView
                        android:id="@+id/ctl_title"
                        android:layout_width="@dimen/zero_size"
                        android:layout_height="wrap_content"
                        android:text="@{dazData.title}"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.7"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/margin_l"
                        android:layout_marginBottom="@dimen/margin_xl"
                        android:layout_marginEnd="@dimen/margin_l"
                        app:layout_constraintEnd_toStartOf="@+id/ctl_pagination" />

                    <TextView
                        android:id="@+id/ctl_pagination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{dazData.pagination}"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.7"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="@dimen/margin_xl"
                        android:layout_marginEnd="@dimen/margin_l" />

                </android.support.constraint.ConstraintLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/toolbar_constraint_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/toolbar_title"
                            android:layout_width="@dimen/zero_size"
                            android:layout_height="wrap_content"
                            android:text="@{dazData.title}"
                            android:visibility="invisible"
                            android:layout_gravity="start"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/toolbar_pagination"
                            android:layout_marginEnd="@dimen/margin_l"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/toolbar_pagination"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{dazData.pagination}"
                            android:visibility="invisible"
                            android:layout_gravity="end"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginEnd="@dimen/margin_l" />

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:padding="@dimen/margin_l">

            <LinearLayout
                android:id="@+id/liner_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/arabic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{dazData.arabic}" />

                <TextView
                    android:id="@+id/compiled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{dazData.compiled}" />

                <TextView
                    android:id="@+id/translation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{dazData.translation}" />

                <TextView
                    android:id="@+id/reference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{dazData.reference}" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
</layout>